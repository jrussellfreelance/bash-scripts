#!/bin/bash
# This script installs some core tools for Ubuntu.
# It probably won't usually be needed, but is useful if you are missing a few tools
# Update apt repositories
apt update
# Install apps
echo "Installing nano..."
apt --assume-yes install nano
echo "Installing wget..."
apt --assume-yes install wget
echo "Installing curl..."
apt --assume-yes install curl
echo "Installing unzip..."
apt --assume-yes install unzip
echo "Installing net-tools..."
apt --assume-yes install net-tools
echo "All done! =D"